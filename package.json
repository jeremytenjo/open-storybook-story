{
	"name": "open-storybook-story",
	"displayName": "Open Storybook Story",
	"description": "Quickly open storybook stories in the browser from the editot",
	"publisher": "tenjojeremy",
	"version": "0.16.0",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./src/index.js",
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "",
		"publish": "vsce publish minor",
		"vscode:prepublish": "npm run test"
	},
	"icon": "assets/images/logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/jeremytenjo/open-storybook-story"
	},
	"contributes": {
		"configuration": {
			"title": "openStorybookStory",
			"properties": {
				"openStorybookStory.localhostPort": {
					"type": "number",
					"default": 6006,
					"description": "Localhost storybook port number"
				},
				"openStorybookStory.liveSitePathname": {
					"type": "string",
					"default": "",
					"description": "Pathname to production storybook"
				},
				"openStorybookStory.storyFilesLocationGlobs": {
					"type": "array",
					"default": [
						"src/**/*stories.@(js|jsx|ts|tsx|mdx)"
					],
					"description": "Array of globs that indicates the location of your story files"
				}
			}
		}
	},
	"devDependencies": {
		"@types/vscode": "^1.55.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"change-case": "^4.1.2",
		"os": "^0.1.1"
	}
}